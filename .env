# Shared Database Configuration
POSTGRES_DRIVER=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_DB=real_time_messaging_db
POSTGRES_PASSWORD=postgres
POSTGRES_SSL_MODE=disable
POSTGRES_POOL_MAX=10

# Shared Logging Configuration
LOGGING_LEVEL=debug
LOGGING_FORMAT=json

# Shared Go Environment
GO_ENV=development
GOPATH=/go
PATH=/go/bin:/usr/local/go/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# JWT Configuration
JWT_SECRET=secret

# Nats Configuration
NATS_URL=nats://nats:4222
NATS_PORT=4222
NATS_USERNAME=nats_user
NATS_PASSWORD=nats_password

# Producer Application Configuration
PRODUCER_APP_NAME=real-time-messaging-producer
PRODUCER_APP_ENV=development
PRODUCER_APP_VERSION=1.0.0
PRODUCER_HTTP_HOST=localhost
PRODUCER_HTTP_PORT=8080
PRODUCER_HTTP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
PRODUCER_HTTP_TIMEOUT=30

# Consumer Application Configuration
CONSUMER_APP_NAME=real-time-messaging-consumer
CONSUMER_APP_ENV=development
CONSUMER_APP_VERSION=1.0.0
CONSUMER_HTTP_HOST=localhost
CONSUMER_HTTP_PORT=8081
CONSUMER_HTTP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081
CONSUMER_HTTP_TIMEOUT=30

# Auth Application Configuration
AUTH_APP_NAME=real-time-messaging-auth
AUTH_APP_ENV=development
AUTH_APP_VERSION=1.0.0
AUTH_HTTP_HOST=localhost
AUTH_HTTP_PORT=8082
AUTH_HTTP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8082
AUTH_HTTP_TIMEOUT=30